<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/player_heart1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/heart2" />

    <ImageView
        android:id="@+id/player_heart2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/heart2" />

    <ImageView
        android:id="@+id/player_heart3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/heart2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gep"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jatekos"
        android:textSize="30sp"/>

    <ImageView
        android:id="@+id/computer_heart1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/heart2" />

    <ImageView
        android:id="@+id/computer_heart2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/heart2" />

    <ImageView
        android:id="@+id/computer_heart3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/heart2" />

    </LinearLayout>

    <TextView
        android:id="@+id/draw_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30sp"/>


    <ImageView
        android:id="@+id/computer_choice"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/rock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gep valasztasa"
        android:textSize="30sp"/>

    <ImageView
        android:id="@+id/player_choice"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/rock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Te valasztasod"
        android:textSize="30sp"/>

    <LinearLayout
        style="?android:attr/buttonBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/rock_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/rock"
            android:onClick="playerMove"
            android:tag="0" />

        <Button
            android:id="@+id/paper_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:onClick="playerMove"
            android:tag="1"
            android:background="@drawable/paper" />

        <Button
            android:id="@+id/scissors_button"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="100dp"
        android:layout_height="100dp"
        android:onClick="playerMove"
        android:tag="2"
        android:background="@drawable/scissors" />

    </LinearLayout>
</LinearLayout>
